{% extends "base.html.twig" %}

{% block body %}


	<h1 class="text-center">Nos produits phares</h1>

	<div class="row">
		{% for p in products %}
			<div class="col">
				<div class="card">

					<img src="https://cdn.pixabay.com/photo/2016/04/10/15/13/mangoes-1320111_1280.jpg" class='img-fluid' alt="Image du produit">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							({{p.price/100}}
							&euro;)
						</h4>

						<span class="badge bg-info">
							{{p.category.name}}</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="{{path('product_show', { 'category_slug':p.category.slug, 'slug':p.slug})}}" class="btn btn-primary btn-sm">Détails</a>
						<a href="#" class="btn btn-success btn-small">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

