{% extends "base.html.twig" %}

{% block title %}
	Catégorie :
	{{slug}}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{path('homepage')}}">Accueil</a>
		</li>


		<li class="breadcrumb-item active">{{category.name}}</li>
	</ol>
	Catégorie :
	<h1>{{category.name}}</h1>

	<div class="row">
		{% for p in category.products %}


			<div class="col-3 ">
				<div class="card">

					<img src="https://cdn.pixabay.com/photo/2016/04/10/15/13/mangoes-1320111_1280.jpg" class='img-fluid' alt="Image du produit">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							({{p.price/100}}
							&euro;)
						</h4>

						<span class="badge bg-info">
							{{p.category.name}}</span>
						<p class="card-text">{{p.shortDescription}}</p>


						<a href="#" class="btn btn-primary btn-sm">Détails</a>
						<a href="#" class="btn btn-success btn-small">Ajouter</a>
					</div>
				</div>
			</div>


		{% endfor %}
	</div>
{% endblock %}
